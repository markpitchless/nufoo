package [% class %];
[% WRAPPER "pod-wrap.pod.tt" %]
our $VERSION = '0.01';

use Moose::Role;

[%- IF with.size %]
with '[% with.join("', '") %]';

[%- END %]
[%- FOREACH attr IN has  %]
has [% attr.name %] => (
    is      => "[% attr.is %]",
    isa     => "[% attr.isa %]",
    [%- IF attr.default %]
    default => "[% attr.default %]",
    [%- END %]
);

[%- END %]

no Moose::Role;

1;
__END__
[% END # /pod-wrap %]
